[
    {
      "name": "my-node",
      "script": "index.js",
      "node_args": "--harmony",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "watch": [
        "index.js",
        "src"
      ],
      "ignore_watch": [
        ".git",
        ".gitignore",
        "package.json",
        "pm2.json",
        "README.md",
        "node_modules",
        "package.json"
      ],
      "watch_options": {
        "followSymlinks": false
      },
      "max_memory_restart": "512M",
      "env": {
        "VERSION": "1.0.0",
        "LOCAL":true,
        "NODE_ENV": "development",
        "PORT": 2017
      }
    }
  ]
  